<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.A.ForgotPasswordActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/black"
        app:title="Forgot Password?"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ForogotPasswordToolbar"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ss"
            android:background="@drawable/box"
            app:layout_constraintTop_toBottomOf="@id/ForogotPasswordToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imgLogo"


            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your e-mail id , we \n will send you email to \n reset password. "
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txtForgotInstructions"
       android:textAlignment="center"
        android:layout_margin="15dp"
        android:textSize="15sp"

        />
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtForgotInstructions"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/white"

            android:focusable="false"
            android:layout_marginTop="15dp"
            android:id="@+id/EdForgotPasswordEmail"

            >
            <com.example.shopandsell.utli.MyEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txtLogin"
                android:layout_margin="2dp"

                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:id="@+id/edForgotPasswprdEmailID"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EdForgotPasswordEmail"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Submit"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:id="@+id/btnSubmitForgotPassword"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>