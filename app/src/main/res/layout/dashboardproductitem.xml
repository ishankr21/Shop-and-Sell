<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/layoutitemdashboardproduct"
    android:background="@drawable/corners_cureved_background"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dashboardproductitemimage"
        android:src="@drawable/person_placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/dashboardproductitemimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/manrope_bold"
            android:id="@+id/dashboardproductitemtitle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category : "
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:fontFamily="@font/manrope_semi_bold"
            android:id="@+id/dashboardproductitemcategory"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="12sp"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/black"
            android:padding="5dp"
            android:id="@+id/dashboardproductitemprice"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In-stock"
            android:textSize="12sp"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/black"
            android:padding="5dp"
            android:id="@+id/dashboardproductinstock"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>