<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/box3"
    android:layout_margin="5dp"
    android:id="@+id/llAddressItem"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llNameAndIcon"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Ishan Kumar"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/addressItemName"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="HOME"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#E91E63"
            android:gravity="center"
            android:id="@+id/addressItemAddressType"

            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addressItemAddress"
        android:text="Madan Mohan Apt."
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addressItemPhoneNumber"
        android:text="212212173314"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        />
</LinearLayout>